<style>
    .registration-section {
        padding: 100px 0;
        background: #f9f9ff;
    }

    .registration-form {
        background: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
    }

        .registration-form h2 {
            margin-bottom: 30px;
            color: #222;
            text-align: center;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        height: 50px;
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px 20px;
        font-size: 14px;
    }

        .form-control:focus {
            border-color: #f8b600;
            box-shadow: none;
        }

    .btn-register {
        background: #f8b600;
        color: #222;
        padding: 12px 40px;
        border-radius: 5px;
        border: none;
        font-weight: 600;
        text-transform: uppercase;
        transition: all 0.3s;
        width: 100%;
        margin-top: 20px;
    }

        .btn-register:hover {
            background: #222;
            color: #fff;
        }

    .login-link {
        text-align: center;
        margin-top: 20px;
    }

        .login-link a {
            color: #f8b600;
            text-decoration: none;
        }

            .login-link a:hover {
                text-decoration: underline;
            }
</style>


