        <!-- Filters -->
        <div class="filter-card">
            <h5 class="mb-4" style="color: var(--secondary-color);">
                <i class="fa fa-filter"></i> Filtres de Recherche
            </h5>
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="search" value="@ViewBag.Search"
                           placeholder="Nom, Email, Chambre...">
                </div>
                <div class="col-md-3">
                    <select class="form-control" name="status">
                        <option value="">Tous les statuts</option>
                        <option value="EnAttente" selected="@(ViewBag.Status == "EnAttente")">En Attente</option>
                        <option value="Confirmee" selected="@(ViewBag.Status == "Confirmee")">Confirmée</option>
                        <option value="Payee" selected="@(ViewBag.Status == "Payee")">Payée</option>
                        <option value="Annulee" selected="@(ViewBag.Status == "Annulee")">Annulée</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-control" name="sortBy">
                        <option value="date" selected="@(ViewBag.SortBy == "date")">Date récente</option>
                        <option value="client" selected="@(ViewBag.SortBy == "client")">Nom client</option>
                        <option value="chambre" selected="@(ViewBag.SortBy == "chambre")">Numéro chambre</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary-custom w-100">
                        <i class="fa fa-search"></i> Filtrer
                    </button>
                </div>
            </form>
        </div>

        <!-- Reservations Table -->
        <div class="table-container">
            <div class="table-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">Liste des Réservations</h4>
                        <p class="mb-0 opacity-75">@Model.Count réservation(s) trouvée(s)</p>
                    </div>
                    <div>
                        <a href="@Url.Action("Reservations")" class="btn btn-outline-custom">
                            <i class="fa fa-refresh"></i> Actualiser
                        </a>
                    </div>
                </div>
            </div>

            <div class="table-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Client</th>
                                    <th>Chambre</th>
                                    <th>Dates</th>
                                    <th>Total</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reservation in Model)
                                {
                                    <tr>
                                        <td>#@reservation.Id</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle">
                                                    @reservation.UserNom[0]@reservation.UserPrenom[0]
                                                </div>
                                                <div>
                                                    <strong>@reservation.UserNom @reservation.UserPrenom</strong>
                                                    <div class="text-muted small">@reservation.UserEmail</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <strong>@reservation.ChambreNumero</strong>
                                            <div class="text-muted small">@reservation.ChambreType</div>
                                        </td>
                                        <td>
                                            <div>@reservation.DateDebut.ToString("dd/MM")</div>
                                            <div class="text-muted small">au @reservation.DateFin.ToString("dd/MM")</div>
                                        </td>
                                        <td class="font-weight-bold" style="color: var(--accent-color);">
                                            @reservation.CoutTotal.ToString("C")
                                        </td>
                                        <td>
                                            @{
                                                var badgeClass = "badge-" + reservation.Statut.ToString().ToLower();
                                                var statusText = reservation.Statut.ToString();
                                            }
                                            <span class="badge @badgeClass">@statusText</span>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="@Url.Action("ReservationDetails", new { id = reservation.Id })"
                                                   class="btn btn-view" title="Voir détails">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                @if (reservation.Statut == StatutReservation.EnAttente)
                                                {
                                                    <form method="post" action="@Url.Action("UpdateStatus", new { id = reservation.Id })"
                                                          class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="newStatus" value="@StatutReservation.Confirmee" />
                                                        <button type="submit" class="btn btn-sm btn-primary-custom ml-1" title="Confirmer">
                                                            <i class="fa fa-check"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="text-muted">
                            Page 1 sur 1
                        </div>
                        <nav>
                            <ul class="pagination mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Précédent</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Suivant</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fa fa-calendar-times-o"></i>
                        <h4 class="mb-3">Aucune réservation trouvée</h4>
                        <p class="mb-4">Aucune réservation ne correspond à vos critères de recherche.</p>
                        <a href="@Url.Action("Reservations")" class="btn btn-primary-custom">
                            <i class="fa fa-times"></i> Réinitialiser les filtres
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[title]').tooltip();

            // Auto-refresh every 3 minutes
            setInterval(function() {
                window.location.reload();
            }, 180000);

            // Status update confirmation
            $('form[action*="UpdateStatus"]').on('submit', function(e) {
                var status = $(this).find('input[name="newStatus"]').val();
                if (status === 'Annulee') {
                    if (!confirm('Êtes-vous sûr de vouloir annuler cette réservation ?')) {
                        e.preventDefault();
                        return false;
                    }
                }
                return true;
            });

            // Show loading on filter submit
            $('form[method="get"]').on('submit', function() {
                $('button[type="submit"]').html('<i class="fa fa-spinner fa-spin"></i> Chargement...');
            });
        });
    </script>
