@using Microsoft.AspNetCore.Identity
@using HotelAurelia.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
     
        // Get current user from database
        var user = await UserManager.GetUserAsync(User);
        var firstName = user?.Prenom ?? User.Identity?.Name;
    
    <li class="nav-item">
        @if(user.Role == "Gerant" )
        {
            <a id="manage" class="nav-link text-dark"
               href="/Home/GerantDashboard"
               title="Dashboard">
                Hello @firstName!
            </a>
        }
        else if (user.Role == "Receptionniste")
        {
            <a id="manage" class="nav-link text-dark"
               href="/Receptionnistes/Reservations"
               title="Reservations">
                Hello @firstName!
            </a>
        }
        else
        {
            <a id="manage" class="nav-link text-dark"
               asp-controller="Profile" asp-action="Index"
               title="Profile">
                Hello @firstName!
            </a>
            
        }
        


</li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
